<!DOCTYPE html>
<html>
    <head>
        <title>Welcome to MessagingApp</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    </head>
    <body>
        <table class="table">
            <thead class="thead-dark">
            <tr><th>From</th><th>To</th><th>Message</th><th>TimeStamp</th></tr>
            </thead>
            <% if(messagesToShow) {                 %>
            <%      messages.Items.forEach( message => {  %>
                        <tr><td><%=message.fromUser%></td><td><%=message.toUser%></td><td><%=message.messageText%></td><td><%=new Date(message.timeStamp)%></td></tr>
            <%      })                               %>
            <% }                                    %>
        </table>
        <form action="/sendMessage/<%=userID%>" method="POST">
            <input type="text" name="toUser" placeholder="toUser" required>
            <input type='text' name='messageText' placeholder='messageText' required>
            <input type="submit">
        </form>
    </body>
</html>